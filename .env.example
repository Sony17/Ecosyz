# Ecosyz AI Code Generator Environment Variables
# Copy this file to .env.local and fill in your actual values

# Application Settings
NEXT_PUBLIC_APP_NAME="Ecosyz AI Code Generator"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NODE_ENV="development"

# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL="your_supabase_project_url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your_supabase_anon_key"
SUPABASE_SERVICE_ROLE_KEY="your_supabase_service_role_key"

# OpenAI API (Required for AI code generation)
OPENAI_API_KEY="your_openai_api_key"

# GitHub Integration (Phase 4)
GITHUB_CLIENT_ID="your_github_oauth_app_client_id"
GITHUB_CLIENT_SECRET="your_github_oauth_app_client_secret"
GITHUB_ACCESS_TOKEN="your_personal_github_token" # Optional: fallback token

# Vercel Integration (Phase 4)
VERCEL_CLIENT_ID="your_vercel_integration_client_id"
VERCEL_CLIENT_SECRET="your_vercel_integration_client_secret"
VERCEL_ACCESS_TOKEN="your_personal_vercel_token" # Optional: fallback token

# Figma Integration (Phase 4)
FIGMA_CLIENT_ID="your_figma_oauth_app_client_id"
FIGMA_CLIENT_SECRET="your_figma_oauth_app_client_secret"
FIGMA_ACCESS_TOKEN="your_personal_figma_token" # Optional: fallback token

# JWT Secret for authentication
JWT_SECRET="your_jwt_secret_key"

# Optional: Analytics and monitoring
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
SENTRY_DSN="https://your-sentry-dsn"

# Optional: Email service (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your_email@gmail.com"
SMTP_PASS="your_email_app_password"

# Optional: Redis for caching (production)
REDIS_URL="redis://localhost:6379"

# Optional: File storage (if not using Supabase storage)
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="your_s3_bucket_name"

# Development Settings
DEBUG="true"
LOG_LEVEL="debug"

# Rate limiting (requests per minute)
RATE_LIMIT_REQUESTS="100"
RATE_LIMIT_WINDOW="60000"

# File upload limits
MAX_FILE_SIZE="10485760" # 10MB in bytes
MAX_FILES_PER_PROJECT="100"

# AI Generation Settings
MAX_GENERATION_TIME="300000" # 5 minutes in milliseconds
MAX_CONCURRENT_GENERATIONS="5"

# Deployment Settings
ENABLE_GITHUB_INTEGRATION="true"
ENABLE_VERCEL_INTEGRATION="true"
ENABLE_FIGMA_INTEGRATION="true"
ENABLE_OPENHANDS_INTEGRATION="true"

# Phase 4 Real API Settings
USE_REAL_APIS="true" # Set to false for development with mock APIs

# Security Settings
CORS_ORIGINS="http://localhost:3000,https://your-production-domain.com"
COOKIE_DOMAIN="localhost" # Change to your domain in production
SECURE_COOKIES="false" # Set to true in production with HTTPS

# Feature Flags
ENABLE_WORKSPACE="true"
ENABLE_CODE_EDITOR="true"
ENABLE_FIGMA_VIEWER="true"
ENABLE_REAL_TIME_COLLABORATION="false"
ENABLE_ADVANCED_AI_FEATURES="true"

# Performance Settings
CACHE_DURATION="3600" # 1 hour in seconds
API_TIMEOUT="30000" # 30 seconds in milliseconds
DATABASE_POOL_SIZE="10"

# Monitoring and Health Checks
HEALTH_CHECK_ENDPOINT="/api/health"
METRICS_ENDPOINT="/api/metrics"
ENABLE_PERFORMANCE_MONITORING="true"

# Backup and Recovery
ENABLE_AUTO_BACKUP="true"
BACKUP_RETENTION_DAYS="30"
BACKUP_SCHEDULE="0 2 * * *" # Daily at 2 AM