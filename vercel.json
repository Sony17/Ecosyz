{
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "framework": "nextjs",
  "buildCommand": "npx prisma generate && next build",
  "installCommand": "npm ci",
  "env": {
    "PRISMA_GENERATE": "true",
    "NODE_ENV": "production",
    "PRISMA_MIGRATE_ALLOW_RESET": "false"
  },
  "version": 3,
  "regions": ["iad1"],
  "build": {
    "env": {
      "NODE_VERSION": "20.x"
    }
  }
}
